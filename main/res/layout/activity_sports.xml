<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dude.quizscene.Sports"
    android:background="@drawable/football">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scoreTh"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/background_light"
        android:background="#80000000" />

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:id="@+id/B4h"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_light"
        android:background="#80000000"
        android:layout_marginBottom="21dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:id="@+id/StoryT"

        android:textColor="@android:color/background_light"
        android:background="#80000000"
        android:layout_below="@+id/scoreTh"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp" />

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/B3h"
        android:textColor="@android:color/background_light"
        android:background="#80000000"
        android:layout_marginBottom="24dp"
        android:layout_above="@+id/B4h"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/B2h"
        android:textColor="@android:color/background_light"
        android:background="#80000000"
        android:layout_above="@+id/B3h"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp" />

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/B1h"
        android:background="#80000000"
        android:textColor="@android:color/background_light"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/B2h"
        android:layout_alignParentStart="true" />
</RelativeLayout>
